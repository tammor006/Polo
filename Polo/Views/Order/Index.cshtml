                                <thead>
                                    <tr>
                                        <th></th>
                                        <th class="text-sm-leftt">Item</th>
                                        <th class="text-sm-right">Qty</th>
                                        <th class="text-sm-right">Price</th>
                                        <th class="text-sm-right">Total</th>
                                    </tr>
                                </thead>
                                <tbody id="tbdata"></tbody>
                            </table>
                                </div>
                               <div class="tab-content p-3 text-muted" style="padding-top:10px !important">
                            <div class="tab-pane active" id="home-1" role="tabpanel">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="search-box mr-2 mb-2 d-inline-block">
                                            <div class="position-relative">
                                                    <a onclick="ShowModal('Number',0)" class="btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2"> <i class="mdi mdi-plus mr-1"></i> Add New Customer</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group">
                                            <input type="text" id="number" class="form-control" placeholder="Search Customer">
                                            <div class="input-group-append">
                                                <button class="btn btn-secondary" type="button" onclick="Search()">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                            <div class="input-group">
                                                <input type="number" id="disc" class="form-control" onchange="AddDisc()" placeholder="Discount">
                                                <div class="input-group-append">
                                                    <button class="btn btn-secondary" type="button" onclick="AddCouprn()">
                                                         Add Coupen
                                                    </button>
                                                </div>
                                            </div>
                                    </div>
                                    <div class ="col-md-6">
                                        <div class="form-group">
                                                <input id="name" readonly type="text" placeholder="Name" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                            <div class="form-group">
                                                <input id="subtotal" readonly type="number" placeholder="Sub Total" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <input id="tax" readonly type="number" placeholder="Tax" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <input id="total" readonly type="number" placeholder="Total" class="form-control">
                                            </div>
                                    </div>
                                    <div class="col-md-6">
                                            <div class="form-group">
                                                <input id="email" readonly type="text" placeholder="Email" class="form-control">
                                            </div>
                                              <div class="form-group">
                                                    <textarea id="address" readonly rows="4" placeholder="Address" class="form-control"></textarea>
                                                </div>
                                    </div>
                                    <div class="col-1"></div>
                                </div>
                            </div>
                            <div class="tab-pane" id="profile-1" role="tabpanel">
                               
                            </div>
                            <div class="tab-pane" id="messages-1" role="tabpanel">
                                
                            </div>
