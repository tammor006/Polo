@{
    ViewData["Title"] = "Order";
}
<style>
    .table_wrapper {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
    }
</style>
<!-- ============================================================== -->
<div class="main-content">
    <div class="page-content" style="padding: calc(30px + 24px) calc(24px / 2) 0px calc(24px / 2) !important;">
        <div id="tabel" class="row">
            <div class="col-md-1">
                <button class=" col-md-12 btn btn-dark waves-effect waves-light" onclick="Clear()">Clear</button>
            </div>
                    <div class="col-sm-4">
                         <div class="card" style="min-height: 507px; max-height: 507px;margin-bottom:0px">
                            <div class="card-body" style="padding:0px">
                               <ul class="nav nav-pills nav-justified" role="tablist">
                            <li class="nav-item waves-effect waves-light">
                                <a class="nav-link active" data-toggle="tab" href="#home-1" role="tab">
                                    <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                    <span class="d-none d-sm-block">Delivery</span>
                                </a>
                            </li>
                            <li class="nav-item waves-effect waves-light">
                                <a class="nav-link" data-toggle="tab" href="#profile-1" role="tab">
                                    <span class="d-block d-sm-none"><i class="far fa-user"></i></span>
                                    <span class="d-none d-sm-block">Pickup</span>
                                </a>
                            </li>
                            <li class="nav-item waves-effect waves-light">
                                <a class="nav-link" data-toggle="tab" href="#messages-1" role="tab">
                                    <span class="d-block d-sm-none"><i class="far fa-envelope"></i></span>
                                    <span class="d-none d-sm-block">TakeAway</span>
                                </a>
                            </li>

                        </ul>
                        <div class="table_wrapper" style="min-height: 35vh; max-height: 35vh;border:2px solid #eff2f7">
                            <table id="tech-companies-1" class="table table-striped table-nowrap mb-0">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th class="text-sm-leftt">Item</th>
                                        <th class="text-sm-right">Qty</th>
                                        <th class="text-sm-right">Price</th>
                                        <th class="text-sm-right">Total</th>
                                    </tr>
                                </thead>
                                <tbody id="tbdata"></tbody>
                            </table>
                                </div>
                               <div class="tab-content p-3 text-muted">
                            <div class="tab-pane active" id="home-1" role="tabpanel">
                                <div class="row">
                                    <div class="col-5">
                                        <div class="search-box mr-2 mb-2 d-inline-block">
                                            <div class="position-relative">
                                                <a onclick="ShowModal(0)" class="btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2" style="width:150px">Add Customer</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-7">
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Search Customer">
                                            <div class="input-group-append">
                                                <button class="btn btn-secondary" type="button">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <input id="total" readonly type="number" placeholder="0" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class ="col-md-7">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <input id="name" readonly type="text" placeholder="Name" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5"></div>
                                    <div class="col-md-7">
                                       <div class="form-group">
                                              <div class="form-group">
                                                    <input id="address" readonly type="text" placeholder="Address" class="form-control">
                                                </div>
                                    </div>
                                    </div>
                                    <div class="col-1"></div>
                                </div>
                            </div>
                            <div class="tab-pane" id="profile-1" role="tabpanel">
                               
                            </div>
                            <div class="tab-pane" id="messages-1" role="tabpanel">
                                
                            </div>
                        </div>
                             
                            </div>
                            <div class="card-footer">
                        <button class=" col-md-12 btn btn-danger waves-effect waves-light">Print</button>
                            </div>
                          </div>
                    </div>
                    <div class="col-sm-7">
                    <div class="row ">
                    <div class="col-md-2"><span class=" col-md-12 btn btn-warning waves-effect waves-light">Categories</span></div>
                    <div class="col-md-1"></div>
                    <div class="col-md-8"><span class="col-md-10 btn btn-danger waves-effect waves-light">Menu</span></div>
                    <div class="col-md-2" id="product">
                        <div class="nav flex-column nav-pills" style="background-color:white;padding-top:5px;border:2px solid #eff2f7;min-height: 470px; max-height: 470px " id="v-pills-tab" role="tablist" aria-orientation="vertical"> </div>
                            </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-8">
                                 <div class=" col-md-11 tab-content text-muted mt-4 mt-md-0" id="v-pills-tabContent"></div>
                            </div>
                    </div>
                   </div>
                </div>
            </div>     
          @*  <button>Print</button>*@
    </div>
    <!-- End Page-content -->
@Html.Partial("~/Views/Order/_KeyPad.cshtml")
